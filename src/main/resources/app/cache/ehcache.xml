<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
    <diskStore path="user.home/cache"/>

    <defaultCache
            maxElementsInMemory="20000"
            eternal="false"
            timeToIdleSeconds="120"
            timeToLiveSeconds="120"
            overflowToDisk="true"
            diskPersistent="false"
            diskExpiryThreadIntervalSeconds="120"
            />

    <cache name="UserImageCache"
           maxElementsInMemory="100"
           eternal="true"
           memoryStoreEvictionPolicy="LFU"
           overflowToDisk="false"
            />

    <cache name="org.hibernate.cache.internal.StandardQueryCache"
           maxElementsInMemory="10000"
           eternal="false"
           timeToLiveSeconds="3000"
           timeToIdleSeconds="6000"
           overflowToDisk="true"
            />

    <cache
            name="org.hibernate.cache.spi.UpdateTimestampsCache"
            maxElementsInMemory="1000"
            eternal="true"
            overflowToDisk="true"
            />

    <cache name="org.pos.coffee.bean.ReferenceLookUp"
           maxElementsInMemory="10000"
           eternal="false"
           timeToIdleSeconds="3000"
           timeToLiveSeconds="6000"
           overflowToDisk="true"
            />

    <cache name="org.pos.coffee.bean.Product"
           maxElementsInMemory="10000"
           eternal="false"
           timeToIdleSeconds="3000"
           timeToLiveSeconds="6000"
           overflowToDisk="true"
            />

    <cache name="org.pos.coffee.bean.Product.promoGroupList"
           maxElementsInMemory="10000"
           eternal="false"
           timeToIdleSeconds="3000"
           timeToLiveSeconds="6000"
           overflowToDisk="true"
            />

</ehcache>